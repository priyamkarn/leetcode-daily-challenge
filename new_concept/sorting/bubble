class Solution
{
    public:
    //Function to sort the array using bubble sort algorithm.
    //last me sabse bara.
    void bubbleSort(int arr[], int n)
    {
        // Your code here  
        for(int i=0;i<n;i++)
        {
            for(int j=1;j<n;j++)
            {
                if(arr[j]<arr[j-1])
                {
                    swap(arr[j],arr[j-1]);
                }
            }
        }
    }
};
